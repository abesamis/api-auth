datasource db {
  provider = "postgresql" // Replace with your DB provider (mysql, sqlite, etc.)
  url      = "postgresql://${env("POSTGRES_USER")}:${env("POSTGRES_PASSWORD")}@${env("POSTGRES_HOST")}:5432/env("POSTGRES_DB")?schema=public"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  deletedAt DateTime @default(now())
}
